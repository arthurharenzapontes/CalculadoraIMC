<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    tools:context=".MainActivity">

    <EditText
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:id="@+id/edtPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite seu peso" />

    <EditText
        android:inputType="numberDecimal"
        android:maxLength="4"
        android:id="@+id/edtAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPeso"
        android:hint="Digite sua altura" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="16dp"
        android:text="
        TABELA IMC\n
        MENOR QUE 18,5 - MAGREZA 0\n
        ENTRE 18,5 E 24,9 - NORMAL 0\n
        ENTRE 25,0 E 29,9 - SOBREPESO I\n
        ENTRE 30,0 E 39,9 - OBESIDADE II\n
        MAIOR QUE 40,0 - OBESIDADE GRAVE III\n" />

        <Button
            android:id="@+id/btCalcular"
            android:text="Clique aqui para calcular o IMC"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



</RelativeLayout>